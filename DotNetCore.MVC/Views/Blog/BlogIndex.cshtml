@model List<BlogModel>

	@{
		var count = 0;
	}


<div class="container">
	<p class="bg-success border rounded text-center text-white">@TempData["Message"]</p>
<h1 class="text-center my-3">Blog Page</h1>

	<a href="/Blog/Create"><button class="btn btn-primary mb-3">Add New Blog</button></a>
<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<td>No.</td>
			<td>Title</td>
			<td>Author</td>
			<td>Content</td>
			<td>Action</td>
		</tr>
	</thead>
	<tbody>
		@foreach(var blog in Model){
			<tr>
				<td>@(++count)</td>
				<td>@blog.blog_title</td>
				<td>@blog.blog_author</td>
				<td>@blog.blog_content</td>
				<td>
						<a href="/Blog/Edit/@blog.blog_id"><button class="btn btn-warning edit-btn" value="@blog.blog_id">Edit</button></a>
						<a href="/Blog/Delete/@blog.blog_id"><button class="btn btn-danger delete-btn" value="@blog.blog_id">Delete</button></a>
				</td>
			</tr>
		}
	</tbody>
</table>
</div>

